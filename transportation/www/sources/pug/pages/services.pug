extends  ../_skeleton

//- Includes
include ../components/_ui-box-services

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Services #1'

block page  
	// Page Header
	include ../sections/_header-classic
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-typography'
	})
	
	// Services
	section.section.section-lg.bg-default
		.container
			.row.row-60
				.col-md-7.col-xl-8
					.row.row-40
						.col-lg-12.col-xl-6
							+services-classic({
								img: 'services-1-370x274',
								icon: 'linearicons-truck icon-52',
								title: 'Transportation',
								text: 'Reliable transportation solutions'
							})
						.col-lg-12.col-xl-6
							+services-classic({
								img: 'services-2-370x274',
								icon: 'linearicons-dolly',
								title: 'Logistics',
								text: 'Professional Logistics services'
							})
						.col-lg-12.col-xl-6
							+services-classic({
								img: 'services-3-370x274',
								icon: 'linearicons-trailer icon-53',
								title: 'Towing Service',
								text: 'Quality towing when you need it'
							})
						.col-lg-12.col-xl-6
							+services-classic({
								img: 'services-4-370x274',
								icon: 'linearicons-ship2 icon-53',
								title: 'Ocean Freight',
								text: 'Sustainable shipping services'
							})
						.col-lg-12.col-xl-6
							+services-classic({
								img: 'services-5-370x274',
								icon: 'linearicons-plane icon-54',
								title: 'Air Freight',
								text: 'Delivering your cargo worldwide'
							})
						.col-lg-12.col-xl-6
							+services-classic({
								img: 'services-6-370x274',
								icon: 'linearicons-home',
								title: 'Storage',
								text: 'Secure warehousing'
							})
				.col-md-5.col-xl-4
					.aside-services
						h5.aside-services-title solutions for your business
						ul.list-category
							li.list-category-item: a.active(href='#') All services
							li.list-category-item: a(href='#') Transportation
							li.list-category-item: a(href='#') Logistics
							li.list-category-item: a(href='#') Towing Service
							li.list-category-item: a(href='#') Ocean Freight
							li.list-category-item: a(href='#') Air Freight
							li.list-category-item: a(href='#') Storage
						a.button.button-lg.button-primary.button-winona(href='contacts.html') Contact us
	='\n'
	
	
	// Page Footer
	include ../sections/_footer-modern
